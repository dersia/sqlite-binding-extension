<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>SiaConsulting.Azure.WebJobs.Extensions.SqliteExtension</AssemblyName>
    <RootNamespace>SiaConsulting.Azure.WebJobs.Extensions.SqliteExtension</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.0.2</Version>
    <Authors>Sia Consulting Ltd.</Authors>
    <Product>Azure Functions Sqlite Binding</Product>
    <PackageId>SiaConsulting.Azure.WebJobs.Extensions.SqliteExtension</PackageId>
    <Description>Binding Extension for Azure Functions to access Sqlite</Description>
    <Copyright>2019 Sia Consulting Ltd.</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/dersia/sqlite-binding-extension</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dersia/sqlite-binding-extension</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <Nullable>enable</Nullable>
    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.WebJobs" Version="3.0.25" />
    <PackageReference Include="sqlite-net-pcl" Version="1.8.0-beta" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\\..\\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
